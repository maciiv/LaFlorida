@using LaFlorida.ServicesModels;
@using Helpers;
@inject IDataProtectionHelper DataProtectionHelper

@model IList<CycleCostByUser>

@if (Model != null && Model.Any())
{
    @foreach (var cu in Model)
    {
        <div class="col-md-4 my-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">@cu.UserName</h5>
                    <div class="d-flex justify-content-between align-items-center my-2">
                        <div class="align-content-start">
                            <h5 class="card-title cycle-statistic-card-text text-danger"><i class="fas fa-coins"></i></h5>
                        </div>
                        <div class="align-content-end">
                            <h6 class="card-title cycle-statistic-card-text mb-0">$@cu.Costs (@cu.Percentage%)</h6>
                            <p class="card-text text-muted cycle-statistic-card-text">@(!cu.IsCycleRent ? "Costos" : "Renta")</p>
                        </div>
                    </div>
                    @if (!cu.IsCycleRent)
                    {
                        <div class="d-flex justify-content-between align-items-center my-2">
                            <div class="align-content-start">
                                <h5 class="card-title cycle-statistic-card-text text-success"><i class="fas fa-cash-register"></i></h5>
                            </div>
                            <div class="align-content-end">
                                <h6 class="card-title cycle-statistic-card-text mb-0">$@cu.Sales</h6>
                                <p class="card-text text-muted cycle-statistic-card-text">Ventas</p>
                            </div>
                        </div>
                    }
                    <div class="d-flex justify-content-between align-items-center my-2">
                        <div class="align-content-start">
                            <h5 class="card-title cycle-statistic-card-text text-primary"><i class="fas fa-hand-holding-usd"></i></h5>
                        </div>
                        <div class="align-content-end">
                            <h6 class="card-title cycle-statistic-card-text mb-0">
                                $@cu.Withdraws
                                @if (cu.Balance > 0)
                                {
                                    <a asp-page="./Withdraws/Create" asp-route-previous="@cu.CycleId" asp-route-applicationUserId="@DataProtectionHelper.Protect(cu.ApplicationUserId)" class="ml-2 text-primary"><i class="fas fa-plus-circle"></i></a>
                                }
                            </h6>
                            <p class="card-text text-muted cycle-statistic-card-text">Pagado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}