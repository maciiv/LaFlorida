@page
@model LaFlorida.Pages.Withdraws.EditModel

@{
    ViewData["Title"] = "Editar Retiro";
}

<h1>Editar</h1>

<h4>Retiro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Withdraw.WithdrawId" />
            <input type="hidden" asp-for="Withdraw.CreateDate" />
            <div class="form-group">
                <label asp-for="Withdraw.Quantity" class="control-label"></label>
                <input asp-for="Withdraw.Quantity" class="form-control" />
                <span asp-validation-for="Withdraw.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Withdraw.CycleId" class="control-label"></label>
                <select asp-for="Withdraw.CycleId" class="form-control" asp-items="ViewBag.CycleId"></select>
                <span asp-validation-for="Withdraw.CycleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Withdraw.ApplicationUserId" class="control-label"></label>
                <select asp-for="Withdraw.ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="Withdraw.ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (Model.DashboardId == 0)
    {
        <a asp-page="Index">Regresar</a>
    }
    else
    {
        <a asp-page="/Dashboard" asp-route-id="@Model.DashboardId">Regresar</a>
    }
</div>

