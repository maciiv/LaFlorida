@page
@model LaFlorida.Pages.Costs.IndexModel

@{
    ViewData["Title"] = "Costs";
}

<h1>Costos</h1>

@if (Model.Success)
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

@if (Model.Error)
{
    <div class="alert alert-danger" role="alert">
        @Model.Message
    </div>
}

<div class="row">
    <div class="col-md-12 my-3">
        <a asp-page="Create" class="btn btn-primary float-right">Nuevo Costo</a>
    </div>
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover data-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Total)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].CreateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].ApplicationUser)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Cycle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Costs[0].Job)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Costs)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Details)
                            </td>
                            <td>
                                @item.CreateDate.ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cycle.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Job.Name)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.CostId"><i class="fas fa-pencil-alt text-primary" title="Editar"></i></a>
                                <a asp-page="./Delete" asp-route-id="@item.CostId"><i class="fas fa-trash-alt text-danger" title="Borrar"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
