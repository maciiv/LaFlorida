@page
@model LaFlorida.Pages.Costs.CreateModel

@{
    ViewData["Title"] = "Crear Costo";
}

<h1>Crear</h1>

<h4>Costo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="DashboardId" />
            <div class="form-group">
                <label asp-for="Cost.JobId" class="control-label"></label>
                <select asp-for="Cost.JobId" class="form-control" asp-items="ViewBag.JobId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cost.Quantity" class="control-label"></label>
                <input asp-for="Cost.Quantity" class="form-control" />
                <span asp-validation-for="Cost.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost.Price" class="control-label"></label>
                <input asp-for="Cost.Price" class="form-control" />
                <span asp-validation-for="Cost.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost.Details" class="control-label"></label>
                <input asp-for="Cost.Details" class="form-control" />
                <span asp-validation-for="Cost.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost.ApplicationUserId" class="control-label"></label>
                <select asp-for="Cost.ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cost.CycleId" class="control-label"></label>
                @if (Model.Cost?.CycleId != null)
                {
                    <input type="hidden" asp-for="Cost.CycleId" />
                    <p>@Model.CycleName</p>
                }
                else
                {
                    <select asp-for="Cost.CycleId" class="form-control" asp-items="ViewBag.CycleId"></select>
                    <span asp-validation-for="Cost.CycleId" class="text-danger"></span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (Model.DashboardId == 0)
    {
        <a asp-page="Index">Regresar</a>
    }
    else
    {
        <a asp-page="/Dashboard" asp-route-id="@Model.DashboardId">Regresar</a>
    }
</div>

