@page
@model LaFlorida.Pages.ApplicationUsers.EditModel
@{
    ViewData["Title"] = "Editar Accionista";
}

<h1>Editar</h1>

<h4>Accionista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div class="form-group">
                <label asp-for="ApplicationUser.FirstName" class="control-label"></label>
                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LastName" class="control-label"></label>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.RoleId" class="control-label"></label>
                <select asp-for="ApplicationUser.RoleId" class="form-control" asp-items="ViewBag.RoleId">
                    <option value="">No Role</option>
                </select>
                <span asp-validation-for="ApplicationUser.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4" id="editPartial">
        <partial name="_EditPartial" model="Model.ApplicationUser" />
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

