@page
@model LaFlorida.Pages.ApplicationUsers.CreateModel
@{
    ViewData["Title"] = "Crear Accionista";
}

<h1>Crear</h1>

<h4>Accionista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.FirstName" class="control-label"></label>
                <input asp-for="RegisterApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="RegisterApplicationUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.LastName" class="control-label"></label>
                <input asp-for="RegisterApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="RegisterApplicationUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.Email" class="control-label"></label>
                <input asp-for="RegisterApplicationUser.Email" class="form-control" />
                <span asp-validation-for="RegisterApplicationUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.Password" class="control-label"></label>
                <input asp-for="RegisterApplicationUser.Password" class="form-control" />
                <span asp-validation-for="RegisterApplicationUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.ConfirmPassword" class="control-label"></label>
                <input asp-for="RegisterApplicationUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterApplicationUser.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterApplicationUser.RoleId" class="control-label"></label>
                <select asp-for="RegisterApplicationUser.RoleId" class="form-control" asp-items="ViewBag.RoleId">
                    <option value="">No Role</option>
                </select>
                <span asp-validation-for="RegisterApplicationUser.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>