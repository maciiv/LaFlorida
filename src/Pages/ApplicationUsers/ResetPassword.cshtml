@page
@model LaFlorida.Pages.ApplicationUsers.ResetPasswordModel
@{
    ViewData["Title"] = "Resetear Contrasena";
}

<h1>Resetear Contrasena</h1>

<h4>Accionista @Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResetPassword.Password" class="control-label"></label>
                <input asp-for="ResetPassword.Password" class="form-control" />
                <span asp-validation-for="ResetPassword.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResetPassword.ConfirmPassword" class="control-label"></label>
                <input asp-for="ResetPassword.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

