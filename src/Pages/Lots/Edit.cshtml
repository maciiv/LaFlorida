@page
@model LaFlorida.Pages.Lots.EditModel

@{
    ViewData["Title"] = "Editar Lote";
}

<h1>Editar</h1>

<h4>Lote @Html.DisplayFor(model => model.Lot.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Lot.LotId" />
            <div class="form-group">
                <label asp-for="Lot.Name" class="control-label"></label>
                <input asp-for="Lot.Name" class="form-control" />
                <span asp-validation-for="Lot.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.Size" class="control-label"></label>
                <input asp-for="Lot.Size" class="form-control" />
                <span asp-validation-for="Lot.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

